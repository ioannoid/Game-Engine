{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++ -Wall -Wno-unused-but-set-variable -std=c++17 -o build/program.out source/*.cpp `pkg-config --libs glfw3 glew`",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build (debug)",
            "type": "shell",
            "command": "g++ -Wall -Wno-unused-but-set-variable -std=c++17 -g -o build/program.out source/*.cpp `pkg-config --libs glfw3 glew`",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build (windows)",
            "type": "shell",
            "command": "g++ -Wall -Wno-unused-but-set-variable -std=c++17 -o build/program.exe source/*.cpp -lglfw -lGLEW -lX11 -lGLU -lGL",
            "group": "build",
            "problemMatcher": []
        },
    ]
}